
inicio
    inteiro num_alunos
    real nota
    real soma_notas
    real media_notas
    
    escrever "Quantos alunos existem na turma? "
    ler num_alunos
    
    enquanto num_alunos >= 1
            ler nota
    fimenquanto
    
    media_notas <- soma_notas / num_alunos
    escrever "A média de notas desta turma é ", media_notas
fim
